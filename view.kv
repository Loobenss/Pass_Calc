<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    font_size: 25
    bold: True
    canvas.before:
        Color:
            rgba: (48/255, 84/255, 150/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [15]
<EqualButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    font_size: 25
    bold: True
    canvas.before:
        Color:
            rgba: (8/255, 44/255, 110/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [15]
    
    # color: (1, 1, 1, 1)
    # font_size: 24
    # background_color: (48/255, 84/255, 150/255, 1)
    # bold: True
<TextInput>
    multiline: False
    background_color: (0, 0, 0, 0)
    halign: "right"
    # disabled: True
    readonly: True

<Calc_view>

    BoxLayout:
        size: (root.width, root.height)
        orientation: "vertical"
        padding: 2
        # canvas.before:
        #     Color:
        #         rgba:(1, 1, 1, 1)
        #     Rectangle:
        #         pos: self.pos
        #         size: self.size

        BoxLayout:
            size_hint_y: 0.6
            orientation: "vertical"
            
            BoxLayout:
                orientation: "horizontal"
                padding: 4, 0, 0, 0
                size_hint_y: 0.30
                Label:
                    text:"Pass_Calc..."
                    font_size: 35
                    color: (48/255, 84/255, 150/255, 1)
                    bold: True
                    text_size: self.size
                    halign: 'left'

            BoxLayout:
                orientation: 'vertical'
                TextInput:
                    id: opera
                    text:"0"
                    font_size: 24
                    foreground_color: (1, 1, 1, 1)
                    size_hint_y: 0.5

                TextInput:
                    id: result
                    text: ""
                    foreground_color: (1, 1, 1, .4)
                    font_size: 40

            Button:
                id: eff
                size_hint: .25, .40
                pos_hint: {'center_x': 0.87}
                on_press:root.press_effacer()
                on_release: root.release_effacer()
                background_color: (0,0,0,0)
                background_normal : ''
                Image:
                    id: image
                    source: 'erase_on_release.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    size_hint: None, None
                    size: 35, 35

        GridLayout:
            # background_color: (173/255, 173/255, 173/255, .6)
            spacing: 2
            padding: 3, 15, 3, 3
            
            cols: 4
            rows: 5
            #row1
            EqualButton:
                id: clear
                text: "C"
                on_press: root.clear_all()
                on_press: root.press_color('clear')
                on_release: root.release_eq_color('clear')
            EqualButton:
                id: parenth
                text: "( )"
                on_press: root.parenthOnOff(1)
                on_press: root.press_color('parenth')
                on_release: root.release_eq_color('parenth')
            EqualButton:
                id: p
                text: "%"
                on_press: root.percentage()
                on_press: root.press_color('p')
                on_release: root.release_eq_color('p')
            EqualButton:
                id: sl
                text: "/"
                # background_color: (249/255, 249/255, 249/255, .5)
                on_press: root.press_but("/")
                on_press: root.press_color('sl')
                on_release: root.release_eq_color('sl')
            #row2
            RoundedButton:
                id: s
                text: "7"
                on_press: root.press_but("7")
                on_press: root.press_color('s')
                on_release: root.release_color('s')
            RoundedButton:
                id: h
                text: "8"
                on_press: root.press_but("8")
                on_press: root.press_color('h')
                on_release: root.release_color('h')
            RoundedButton:
                id: n
                text: "9"
                on_press: root.press_but("9")
                on_press: root.press_color('n')
                on_release: root.release_color('n')
            EqualButton:
                id: x
                text: "x"
                on_press: root.press_but("x")
                on_press: root.press_color('x')
                on_release: root.release_eq_color('x')
            #row3
            RoundedButton:
                id: q
                text: "4"
                on_press: root.press_but("4")
                on_press: root.press_color('q')
                on_release: root.release_color('q')
            RoundedButton:
                id: c
                text: "5"
                on_press: root.press_but("5")
                on_press: root.press_color('c')
                on_release: root.release_color('c')
            RoundedButton:
                id: sx
                text: "6"
                on_press: root.press_but("6")
                on_press: root.press_color('sx')
                on_release: root.release_color('sx')
            EqualButton:
                id: m
                text: "-"
                on_press: root.press_but("-")
                on_press: root.press_color('m')
                on_release: root.release_eq_color('m')
            #row4
            RoundedButton:
                id: u
                text: "1"
                on_press: root.press_but("1")
                on_press: root.press_color('u')
                on_release: root.release_color('u')
            RoundedButton:
                id: d
                text: "2"
                on_press: root.press_but("2")
                on_press: root.press_color('d')
                on_release: root.release_color('d')
            RoundedButton:
                id: t
                text: "3"
                on_press: root.press_but("3")
                on_press: root.press_color('t')
                on_release: root.release_color('t')
            EqualButton:
                id: pls
                text: "+"
                on_press: root.press_but("+")
                on_press: root.press_color('pls')
                on_release: root.release_eq_color('pls')
            #row5
            RoundedButton:
                id: plsm
                text: "+/-"
                on_press: root.plusOuMoins()
                on_press: root.press_color('plsm')
                on_release: root.release_color('plsm')
            RoundedButton:
                id: z
                text: "0"
                on_press: root.press_but("0")
                on_press: root.press_color('z')
                on_release: root.release_color('z')
            RoundedButton:
                id: point
                text: "."
                on_press: root.press_but(".")
                on_press: root.press_color('point')
                on_release: root.release_color('point')
            EqualButton:
                id: egal
                text: "="
                on_press: root.equal()
                on_press: root.press_color('egal')
                on_release: root.release_eq_color('egal')
            
            

        
